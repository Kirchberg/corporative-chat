<div class="row">
  <div class="col-sm-4 col-sm-offset-4">

    <h1 class="text-center"><%= t('sign up label') %></h1>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <% flash.each do |key, value| %>
         <div class="alert alert-info" <%= key %>"><div class="text-center"><%= value %></div></div>
      <% end %>

      <div class="form-group">
        <%= t('username sign up') %><br />
        <%= f.text_field :username, autofocus: false, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= t('email sign up') %><br />
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= t('password sign up') %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t('min password') %> </em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= t('password confirm sign up') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit t('button sign up'), class: "btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
